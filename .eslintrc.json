{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
      "class-methods-use-this":"off",
        "prettier/prettier": "error",
        "no-param-reassign": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "ignorePackages": false,
                "pattern": {
                    "js": "never"
                }
            }
        ]
    }
}
